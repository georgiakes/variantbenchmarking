/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/variantbenchmarking -profile <docker/singularity> -c conf/tests_sare/germline_small.config

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus            = 16
    max_memory          = 100.GB
    max_time            = '8.h'

    // Input data
    input               = "samplesheet_sarek_germline_3.csv"
    outdir              = 'results'

    // Genome references
    genome              = 'GRCh38'
    analysis            = 'germline'
    variant_type        = "small"
    method              = 'happy'
    preprocess          = "split_multiallelic,normalize,deduplicate,filter_contigs"

    truth_id            = "HG001"
    truth_vcf           = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/giab/release/NA12878_HG001/latest/GRCh38/HG001_GRCh38_1_22_v4.2.1_benchmark.vcf.gz"
    regions_bed         = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/giab/release/NA12878_HG001/latest/GRCh38/HG001_GRCh38_1_22_v4.2.1_benchmark.bed"
    targets_bed         = "s3://ngi-igenomes/igenomes/Homo_sapiens/GATK/GRCh38/Annotation/intervals/wgs_calling_regions.hg38.bed"
}

process {
    withName: HAPPY_HAPPY {
        container = 'community.wave.seqera.io/library/hap.py_rtg-tools:2ebb433f3ce976d3'
        ext.args = '--engine=vcfeval --leftshift'
    }
}
