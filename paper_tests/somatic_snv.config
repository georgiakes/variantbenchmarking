/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/variantbenchmarking -profile <docker/singularity> -c conf/tests_sare/somatic_snv.config

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]

    withName: 'BCFTOOLS_NORM*' {
        cpus   = { 1                   }
        memory = { 6.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
    withName: 'BCFTOOLS_FILTER*' {
        cpus   = { 1                   }
        memory = { 6.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
    withName: 'BCFTOOLS_SORT*' {
        cpus   = { 1                   }
        memory = { 6.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
}

params {
    config_profile_name        = 'Test profile: somatic_snv'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    test_data_base  = 'https://raw.githubusercontent.com/nf-core/test-datasets/variantbenchmarking'
    input           = "samplesheet_sarek_somatic_snv.csv"
    outdir          = 'results'

    // Genome references
    genome          = 'GRCh38'
    analysis        = 'somatic'
    method          = 'sompy'
    preprocess      = "split_multiallelic,normalize,deduplicate,filter_contigs"
    include_expression   = 'TYPE="snp"'

    variant_type    = "snv"
    truth_id        = "SEQC2"
    truth_vcf       = "${params.test_data_base}/testdata/hg38/truth/somatic/high-confidence_sSNV_in_HC_regions_v1.2_gt.vcf"
    regions_bed     = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/seqc/Somatic_Mutation_WG/release/latest/High-Confidence_Regions_v1.2.bed"
    targets_bed     = "s3://nf-core-awsmegatests/sarek/input/S07604624_Padded_Agilent_SureSelectXT_allexons_V6_UTR.bed"
}
